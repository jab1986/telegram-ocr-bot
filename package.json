{
  "name": "telegram-ocr-bot",
  "version": "2.0.0",
  "description": "Advanced Telegram bot for betting slip OCR analysis with multi-source match results",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:dev": "NODE_ENV=development node src/app.js",
    "start:legacy": "node bot.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance",
    "test:security": "jest --testPathPattern=security",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:ci": "jest --ci --coverage --silent --maxWorkers=2",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "clean": "rm -rf logs/ && echo \"Cleaned logs directory\"",
    "stats": "node -e \"const stats = require('./src/services/cacheService').getStats(); console.log(JSON.stringify(stats, null, 2))\""
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.2",
    "node-telegram-bot-api": "^0.66.0",
    "tesseract.js": "^5.1.1",
    "undici": "^6.21.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "supertest": "^6.3.4",
    "nock": "^13.5.1",
    "@jest/globals": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/**/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.setup.js"
    ],
    "testTimeout": 30000
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "keywords": [
    "telegram",
    "bot",
    "ocr",
    "betting-slip",
    "football",
    "sports",
    "image-processing",
    "text-extraction",
    "match-results"
  ],
  "author": "SuperClaude Optimized",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  }
}