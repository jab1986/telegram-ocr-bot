# Telegram Bot Token (required)
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Football API Key (api-football.com) - Optional but recommended
# Get from https://www.api-football.com/
FOOTBALL_API_KEY=your_football_api_key_here

# Brave Search API Key - Optional for lower league results
# Get from https://api.search.brave.com/
BRAVE_API_KEY=your_brave_api_key_here

# OCR Configuration
OCR_WORKER_POOL_SIZE=3
OCR_TIMEOUT=30000
MAX_IMAGE_SIZE_MB=10

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL_MINUTES=60
CACHE_MAX_ENTRIES=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Logging Configuration
LOG_LEVEL=info
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=false

# Performance Configuration
CONCURRENT_PROCESSING=2
REQUEST_TIMEOUT=10000

# Telegram Bot Configuration
TELEGRAM_POLLING_INTERVAL=1000
TELEGRAM_POLLING_TIMEOUT=30000

# Environment
NODE_ENV=production